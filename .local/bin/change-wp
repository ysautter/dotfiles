#!/bin/bash

# Define the directory where your wallpapers are stored
WALLPAPER_DIR="$HOME/.config/hypr/wallpapers"

# Define the path to your hyprlock.conf file
HYPRLOCK_CONF="$HOME/.config/hypr/hyprlock.conf"

# --- Function to update hyprlock.conf ---
update_hyprlock_conf() {
  local wallpaper_path="$1"
  echo "Updating hyprlock.conf with: $wallpaper_path"

  # Use awk with a heredoc for the script
  awk -v new_path="$wallpaper_path" -f - "$HYPRLOCK_CONF" <<'AWK_SCRIPT' >"${HYPRLOCK_CONF}.tmp"
/^    background \{/,/^    \}$/ { # Match lines from 'background {' to '}' (with indentation)
    if ($0 ~ /^[[:space:]]*path = /) { # Look for 'path =' line, considering leading spaces
        print "        path = " new_path
    } else {
        print
    }
    next
}
{ print }
AWK_SCRIPT

  # Check if awk command was successful
  if [ $? -eq 0 ]; then
    mv "${HYPRLOCK_CONF}.tmp" "$HYPRLOCK_CONF"
    if [ $? -ne 0 ]; then
      echo "ERROR: Failed to move temporary hyprlock.conf file."
      rm -f "${HYPRLOCK_CONF}.tmp" # Clean up temp file
      return 1
    fi
    echo "hyprlock.conf updated successfully."
  else
    echo "ERROR: awk command failed for hyprlock.conf. Check syntax or file contents."
    # Optionally, print the temporary file content for debugging:
    # cat "${HYPRLOCK_CONF}.tmp"
    rm -f "${HYPRLOCK_CONF}.tmp" # Clean up temp file
    return 1
  fi
}

# --- Function to initiate swww and set the wallpaper with animation ---
set_wallpaper_with_swww() {
  local wallpaper_path="$1"
  local monitor_name="$2" # Set your monitor name here, e.g., "eDP-1", "DP-1"

  # Start swww daemon if it's not running
  if ! pgrep -x "swww-daemon" >/dev/null; then
    echo "Starting swww-daemon..."
    swww-daemon &
    sleep 0.5 # Give it a moment to initialize
  fi

  # Echo the monitor information along with the wallpaper path
  echo "Setting wallpaper on monitor $monitor_name: $wallpaper_path"
  # Example transitions. Experiment with different options!
  # -t: transition type (e.g., wipe, grow, outer, random)
  # -d: transition duration in seconds
  # -f: transition fps
  # --invert: invert the transition direction
  # --aspect-ratio: adjust aspect ratio (useful for some transitions)

  # Some common and nice-looking transitions:
  # swww img "$wallpaper_path" -o "$monitor_name" --transition-type wipe --transition-duration 0.8 --transition-fps 60 --transition-step 90
  # swww img "$wallpaper_path" -o "$monitor_name" --transition-type grow --transition-duration 1 --transition-fps 60
  # swww img "$wallpaper_path" -o "$monitor_name" --transition-type outer --transition-duration 1 --transition-fps 60
  swww img "$wallpaper_path" -o "$monitor_name" --transition-type grow --transition-step 90 --transition-duration 1 --transition-fps 165

  # If you want to apply to all monitors without specifying each:
  # swww img "$wallpaper_path" --transition-type grow --transition-duration 1 --transition-fps 60

  echo "Wallpaper set with animation."
}

# --- Main script logic ---

NEW_WALLPAPER=""
MONITOR="DP-1"

if [ -z "$1" ]; then
  # No path given, choose randomly
  echo "No wallpaper path provided. Choosing randomly from $WALLPAPER_DIR..."
  if [ -d "$WALLPAPER_DIR" ]; then
    NEW_WALLPAPER=$(find "$WALLPAPER_DIR" -type f \( -iname "*.jpg" -o -iname "*.jpeg" -o -iname "*.png" -o -iname "*.gif" -o -iname "*.bmp" \) | shuf -n 1)
    if [ -z "$NEW_WALLPAPER" ]; then
      echo "Error: No suitable image files found in $WALLPAPER_DIR."
      exit 1
    fi
  else
    echo "Error: Wallpaper directory $WALLPAPER_DIR does not exist."
    exit 1
  fi
else
  # Path given as a parameter
  NEW_WALLPAPER="$1"
  if [ ! -f "$NEW_WALLPAPER" ]; then
    echo "Error: The provided path is not a valid file: $NEW_WALLPAPER"
    exit 1
  fi
fi

# Validate and set the monitor name
# 1. If a second argument ($2) is provided, use it as the monitor name.
#    Verify that the monitor exists using hyprctl; exit with an error if not found.
# 2. If no argument is provided, default to the first monitor returned by hyprctl.
if [ -n "$2" ]; then
  MONITOR="$2"
  if ! hyprctl monitors | awk '/Monitor/ {print $2}' | grep -Fxq "$MONITOR"; then
    echo "Error: Monitor '$MONITOR' not found."
    exit 1
  fi
else
  monitor_name=$(hyprctl monitors | awk '/Monitor/ {print $2}' | head -n1)
fi

echo "Selected wallpaper: $NEW_WALLPAPER"

# 1. Set wallpaper with swww (which handles transitions)
set_wallpaper_with_swww "$NEW_WALLPAPER" "$MONITOR"

# 2. Update hyprlock.conf
update_hyprlock_conf "$NEW_WALLPAPER"

# 3. Regenerate colors using pywal
#echo "Generating colors with pywal..."
#wal -i "$NEW_WALLPAPER" -n # -n prevents pywal from changing the wallpaper itself

# 4. Restart waybar to apply new colors
#pkill waybar && waybar

#echo "Wallpaper and colors updated successfully!"
echo "Note: Hyprlock will use the new background the next time it is invoked."
